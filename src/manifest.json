{
  "manifest_version": 2,

  "name": "深秋抢票",
  "description": "深秋抢票.",
  "version": "2.0",
  "permissions": [
      "tabs",
      "storage",
	    "activeTab",
      "http://weibo.com/*",
      "http://login.sina.com.cn/*",
      "http://*.weibo.com/*"
	  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },
  "content_security_policy":"script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup":"popup.html"
  }
}